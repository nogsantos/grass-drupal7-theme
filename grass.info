settings[grass_breadcrumb]           = yes
settings[grass_breadcrumb_separator] = ' ›› '
settings[grass_breadcrumb_home]      = 1
settings[grass_breadcrumb_trailing]  = 0
settings[grass_breadcrumb_title]     = 0
settings[grass_skip_link_anchor]     = main-menu
settings[grass_skip_link_text]       = Jump to navigation
settings[grass_html5_respond_meta][] = respond
settings[grass_html5_respond_meta][] = html5
settings[grass_html5_respond_meta][] = meta
settings[grass_rebuild_registry]     = 1
